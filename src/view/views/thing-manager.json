{
  "comIcon" : "fas-cubes",
  "comType" : "@com:wn/thing/manager",
  "comConf" : {
    "..." : "=Main"
  },
  "modType" : "@mod:wn/thing",
  "actions" : [{
    "name" : "reloading",
    "type" : "action",
    "icon" : "zmdi-refresh",
    "text" : "i18n:refresh",
    "altDisplay" : {
      "icon" : "zmdi-refresh zmdi-hc-spin",
      "text" : "i18n:loading"
    },
    "action" : "dispatch:main/reloadSearch",
    "shortcut" : "CTRL+SHIFT+R"
  }, {
    "name" : "saving",
    "type" : "action",
    "icon" : "zmdi-floppy",
    "text" : "i18n:save-change",
    "altDisplay" : {
      "icon" : "fas-spinner fa-pulse",
      "text" : "i18n:saving"
    },
    "enabled" : "changed",
    "action" : "dispatch:main/saveCurrent",
    "shortcut" : "CTRL+S"
  }, {
    "type" : "line"
  }, {
    "type" : "group",
    "icon" : "im-menu",
    "items" : [{
        "name" : "create",
        "type" : "action",
        "icon" : "zmdi-flare",
        "text" : "i18n:create",
        "action" : "main:showBlock(creator)",
        "shortcut" : "ALT+CTRL+N"
      }, {
        "name" : "deleting",
        "type" : "action",
        "icon" : "zmdi-delete",
        "text" : "i18n:del",
        "altDisplay" : {
          "icon" : "zmdi-settings zmdi-hc-spin",
          "text" : "i18n:del-ing"
        },
        "action" : "dispatch:main/removeChecked",
        "shortcut" : "CTRL+DELETE"
      }, {
        "type" : "line"
      }, {
        "name" : "inRecycleBin",
        "type" : "action",
        "icon" : "fas-recycle",
        "text" : "i18n:thing-enter-recyclebin",
        "altDisplay" : {
          "icon" : "far-arrow-alt-circle-left",
          "text" : "i18n:thing-leave-recyclebin",
          "capture" : false
        },
        "action" : "dispatch:main/toggleInRecycleBin"
      }, {
        "name" : "restoring",
        "type" : "action",
        "icon" : "zmdi-time-restore",
        "text" : "i18n:thing-restore",
        "altDisplay" : {
          "icon" : "zmdi-time-restore zmdi-hc-spin",
          "text" : "i18n:thing-restoring"
        },
        "action" : "dispatch:main/restoreRecycleBin"
      }, {
        "name" : "cleaning",
        "type" : "action",
        "icon" : "fas-trash-restore",
        "text" : "i18n:thing-clean",
        "altDisplay" : {
          "icon" : "zmdi-settings zmdi-hc-spin",
          "text" : "i18n:thing-cleaning"
        },
        "action" : "dispatch:main/cleanRecycleBin"
      }, {
        "type" : "line"
      }, {
        "type" : "action",
        "icon" : "zmdi-keyboard",
        "text" : "i18n:console",
        "action" : "=>Ti.Be.Open('/a/open/wn.console')",
        "shortcut" : "ALT+SHIFT+T"
      }, {
        "type" : "action",
        "icon" : "zmdi-info-outline",
        "text" : "i18n:properties",
        "action" : "dispatch:current/openMetaEditor",
        "shortcut" : "ALT+CTRL+P"
      }]
  }]
}