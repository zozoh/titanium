{
  "comIcon" : "im-edit",
  "comType" : "@com:ti/text/raw",
  "comConf" : {
    "title"   : "=meta.title|meta.nm",
    "content" : "=content"
  },
  "modType" : "@mod:wn/obj-current",
  "actions" : [{
      "key"  : "saving",
      "type" : "action",
      "icon" : "zmdi-floppy",
      "text" : "i18n:save-change",
      "altDisplay" : {
        "icon" : "fas-spinner fa-pulse",
        "text" : "i18n:saving"
      },
      "enableBy" : "changed",
      "action" : "dispatch:main/save",
      "shortcut" : "CTRL+S"
    }, {
      "key"  : "reloading",
      "type" : "action",
      "icon" : "zmdi-refresh",
      "text" : "i18n:refresh",
      "altDisplay" : {
        "icon" : "zmdi-refresh zmdi-hc-spin",
        "text" : "i18n:loading"
      },
      "action" : "dispatch:main/reload",
      "shortcut" : "CTRL+SHIFT+R"
    }]
}