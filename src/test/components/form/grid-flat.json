{
  "comType": "TiFormGrid",
  "comConf": {
    "className": "ti-fill-parent",
    "mode": "flat",
    "icon": "fas-baseball-ball",
    "title": "扁平模式表单",
    "autoShowBlank": false,
    "data": "=data",
    "spacing": "comfy",
    "defaultComType": "TiLabel",
    "fieldNameClass": "mark-weak",
    "fieldNameMaxWidth": "1.5rem",
    "canCustomizedFields": true,
    "keepCustomizedTo": "ti-demo-grid-flat-form-customized",
    "whiteFields": [
      "id",
      "name",
      "nickname",
      "sex",
      "note"
    ],
    "fields": [
      {
        "title": "基本信息"
      },
      {
        "icon": "zmdi-flattr",
        "title": "ID",
        "name": "id"
      },
      {
        "title": "名称",
        "name": "name"
      },
      {
        "title": "备注",
        "name": "note",
        "colSpan": 2,
        "rowSpan": 3,
        "nameVAlign": "top",
        "comType": "TiInputText",
        "comConf": {
          "height": "1.4rem"
        }
      },
      {
        "title": "昵称",
        "name": "nickname",
        "width": "1rem",
        "tip" : "随便写的一个注释"
      },
      {
        "title": "this is a very long text, how about it",
        "name": "longlongname",
        "nameWrap": "wrap"
      },
      {
        "title": "Sex",
        "name": "sex",
        "type": "Integer",
        "comType": "TiSwitcher",
        "comConf": {
          "options": "@Dict:Sexes"
        }
      },
      {
        "title": "联系方式"
      },
      {
        "title": "邮箱",
        "name": "email"
      },
      {
        "title": "邮箱2",
        "name": "email2"
      },
      {
        "title": "手机",
        "name": "phone"
      },
      {
        "title": "手机2",
        "name": "phone2"
      },
      {
        "title": "城市",
        "name": "city"
      },
      {
        "title": "地址",
        "name": "address"
      },
      {
        "title": "其他字段"
      },
      {
        "title": "信息1",
        "name": "ext_1"
      },
      {
        "title": "信息2",
        "name": "ext_2"
      }
    ]
  }
}