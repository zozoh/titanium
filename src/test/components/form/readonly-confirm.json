{
  "comType": "TiForm",
  "comConf": {
    "className": "ti-fill-parent",
    "mode": "flat",
    "readonly": true,
    "notifyMode": "confirm",
    "dataMode": "all",
    "data": "=data",
    "spacing": "comfy",
    "defaultComType": "TiInput",
    "fieldNameClass": "mark-weak",
    "fieldNameMaxWidth": "1.5rem",
    "canCustomizedFields": true,
    "keepCustomizedTo": "ti-demo-grid-flat-form-customized",
    "whiteFields": [
      "id",
      "name",
      "nickname",
      "sex",
      "note"
    ],
    "fields": [
      {
        "title": "基本信息",
        "fields": [
          {
            "icon": "zmdi-flattr",
            "title": "ID",
            "name": "id",
            "display": "<=TiLabel>"
          },
          {
            "title": "名称",
            "name": "name"
          },
          {
            "title": "备注",
            "name": "note",
            "colSpan": 2,
            "rowSpan": 3,
            "nameVAlign": "top",
            "comType": "TiInputText",
            "comConf": {
              "height": "1.4rem"
            }
          },
          {
            "title": "昵称",
            "name": "nickname",
            "width": "1rem",
            "tip": "随便写的一个注释"
          },
          {
            "title": "this is a very long text, how about it",
            "name": "longlongname",
            "nameWrap": "wrap"
          },
          {
            "title": "Sex",
            "name": "sex",
            "type": "Integer",
            "comType": "TiSwitcher",
            "comConf": {
              "options": "@Dict:Sexes"
            }
          }
        ]
      },
      {
        "title": "联系方式",
        "fields": [
          {
            "title": "邮箱",
            "name": "email"
          },
          {
            "title": "手机",
            "name": "phone"
          },
          {
            "title": "城市",
            "name": "city"
          },
          {
            "title": "地址",
            "name": "address",
            "colSpan": 2
          }
        ]
      }
    ]
  }
}