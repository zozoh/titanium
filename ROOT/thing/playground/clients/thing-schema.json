{
  "methods" : "@Home:playground/clients/clients-methods.mjs",
  "filter" : {
    "comType" : "wn-thing-filter",
    "comConf" : {
      "placeholder" : "请输入终端名称过滤",
      "status" : "=status"
    }
  },
  "list" : {
    "comType" : "wn-table",
    "comConf" : {
      "list" : "=search.list",
      "changedId"  : "=changedRowId",
      "currentId"  : "=search.currentId",
      "checkedIds" : "=search.checkedIds",
      "border" : true,
      "checkable" : true,
      "multi"  : true,
      "fields" : [{
        "title" : "名称",
        "nowrap" : true,
        "display" : ["@<thumb:fas-tv>", "title"]
      }, {
        "title" : "摘要",
        "display" : "brief"
      }]
    }
  },
  "pager" : {
    "comType" : "ti-paging-jumper",
    "comConf" : {
      "data" : "=search.pager"
    }
  },
  "creator" : {
    "comType" : "wn-thing-creator",
    "comConf" : {
      "config" : {
        "fields" : [{
          "name" : "title",
          "title" : "终端名称",
          "comType" : "ti-input",
          "comConf" : {}
        }]
      },
      "data" : {
        "title" : "新终端"
      }
    }
  },
  "meta" : {
    "comType" : "wn-obj-form",
    "comConf" : {
      "data"   : "=current.meta",
      "status" : "=current.status",
      "fieldStatus" : "=current.fieldStatus",
      "config" : {
        "fields" : [{
            "title"  : "ID",
            "name"   : "id"
          }, {
            "title"   : "缩略图",
            "name"    : "thumb",
            "checkEquals" : false,
            "serializer" : {
              "name" : "toStr",
              "args" : "id:${id}"
            },
            "comType" : "wn-imgfile",
            "comConf" : {
              "target" : "=curentThumbTarget",
              "filter" : "scale(256,256)"
            }
          }, {
            "title"   : "终端名称",
            "name"    : "title",
            "comType" : "ti-input"
          }, {
            "title"   : "摘要描述",
            "name"    : "brief",
            "comType" : "ti-input",
            "comConf" : {
              "multi" : true
            }
          }, {
            "title"   : "排序",
            "name"    : "th_sort",
            "type"    : "Integer",
            "tip"     : "从1开始，数字越大越靠后",
            "defaultAs" : 0,
            "width"   : 60,
            "comType" : "ti-input",
            "comConf" : {}
          }, {
            "title"   : "最后修改",
            "name"    : "lm",
            "type"    : "DateTime",
            "comConf" : {"format":"yyyy年MM月dd日 HH:mm:ss"}
          }]
      },
      "updateBy" : {
        "method" : "dispatch",
        "target" : "main/updateCurrent"
      },
      "setFieldStatusBy" : {
        "method" : "commit",
        "target" : "main/current/setMetaFieldStatus"
      }
    }
  },
  "content" : {
    "comType" : "wn-obj-puretext",
    "comConf" : {
      "showTitle"    : false,
      "meta"         : "=current.meta",
      "content"      : "=current.content",
      "savedContent" : "=current.__saved_content",
      "contentType"  : "=current.contentType",
      "status"       : "=current.status"
    }
  },
  "files" : {
    "comType" : "wn-thing-files",
    "comConf" : {
      "filesName" : "=filesName",
      "files"     : "=files",
      "showTitle" : null
    }
  }
}