{
  "filter" : {
    "comType" : "wn-thing-filter",
    "comConf" : {
      "placeholder" : "请输入文章标题过滤",
      "status" : "=status"
    }
  },
  "list" : {
    "comType" : "wn-table",
    "comConf" : {
      "data" : "=search.list",
      "changedId"  : "=changedRowId",
      "currentId"  : "=search.currentId",
      "checkedIds" : "=search.checkedIds",
      "checkable" : true,
      "multi"  : true,
      "fields" : [{
        "title" : "文章标题",
        "display" : ["@<thumb:far-newspaper>", "th_nm"]
      }, {
        "title" : "标签",
        "display" : {
          "key" : "lbls",
          "comType" : "ti-tags",
          "comConf" : {"data":"${=value}", "removeIcon":null}
        }
      }, {
        "title" : "最后修改",
        "type"    : "DateTime",
        "display" : {
          "key":"lm", 
          "transformer" : {
            "name" : "Ti.Types.formatDate",
            "args" : "M月d日H点"
          }
        }
      }]
    }
  },
  "pager" : {
    "comType" : "ti-paging-jumper",
    "comConf" : {
      "value" : "=search.pager"
    }
  },
  "creator" : {
    "comType" : "wn-thing-creator",
    "comConf" : {
      "fields" : [{
        "name" : "th_nm",
        "title" : "文章标题",
        "comType" : "ti-input",
        "comConf" : {}
      }],
      "data" : {
        "th_nm" : "新文章"
      }
    }
  },
  "meta" : {
    "comType" : "wn-obj-form",
    "comConf" : {
      "data"   : "=current.meta",
      "status" : "=current.status",
      "fieldStatus" : "=current.fieldStatus",
      "fields" : [{
          "title"  : "ID",
          "name"   : "id"
        }, {
          "title"   : "缩略图",
          "name"    : "thumb",
          "checkEquals" : false,
          "serializer" : {
            "name" : "Ti.Types.toStr",
            "args" : "id:${id}"
          },
          "comType" : "wn-imgfile",
          "comConf" : {
            "target" : "=curentThumbTarget",
            "filter" : "scale(256,256)"
          }
        }, {
          "title"   : "文章标题",
          "name"    : "th_nm",
          "comType" : "ti-input"
        },{
          "icon"    : "zmdi-labels",
          "title"   : "标签",
          "name"    : "lbls",
          "type"    : "Array",
          "transformer" : "Ti.Types.toStr",
          "comType" : "ti-input"
        },{
          "title"   : "最后更新",
          "name"    : "lm",
          "type"    : "DateTime",
          "comConf" : {"format":"yyyy年MM月dd日 HH:mm:ss"}
        }],
      "updateBy" : "dispatch:main/updateCurrent",
      "setFieldStatusBy" : "commit:main/current/setMetaFieldStatus"
    }
  },
  "content" : {
    "comType" : "ti-text-raw",
    "comConf" : {
      "showTitle" : false,
      "value" : "=current.content",
      "status" : "=current.status"
    }
  },
  "files" : {
    "comType" : "wn-thing-files",
    "comConf" : {
      "dataHome" : "=currentDataHome",
      "dirName"  : "=currentDataDir",
      "stateLocalKey" : "=meta.id",
      "dirNameTip" : null,
      "dirNameComType" : "ti-switcher"
    }
  }
}