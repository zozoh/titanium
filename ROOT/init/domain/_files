#
#                           WWW 站点
#
##########################################################
@FILE .domain/publish.json
%TMPL:
{
  "base"     : "${base?}",
  "apiBase"  : "${apiBase?}",
  "cdnTmpl"  : "${cdnTmpl?}",
  "rs"       : "${rs}",
  "lang"     : "${lang?zh-cn}",
  "siteRs"   : "${siteRs}",
  "TiJs"     : "${TiJs}",
  "preloads" : ${preloads<json:cqn>?-array-},
  "payReturnUrl" : "${payReturnUrl}",
  "googleMapKey" : "${googleMapKey}",
  "deps": []
}
%END%
#---------------------------------------------------------
